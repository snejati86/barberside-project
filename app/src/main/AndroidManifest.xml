<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inja.barberside" >
    <uses-sdk android:maxSdkVersion="21" android:minSdkVersion="19" android:targetSdkVersion="19"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <uses-permission android:name="android.permission.CAMERA" />
        <uses-permission android:name="android.permission.SEND_SMS" />


        <provider
            android:name="com.inja.barberside.provider.CustomerProvider"
            android:authorities="com.inja.barberside.provider"
            android:exported="false" />

        <activity android:name=".activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
